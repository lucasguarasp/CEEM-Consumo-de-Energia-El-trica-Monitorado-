                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Uf)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Valor)
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" data-target="#TaxaView" data-toggle="modal" onClick="openFeedback('@item.Id')">
