<!-- The Modal -->
<div class="modal" tabindex="-1" role="dialog" id="TaxaView">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Taxa Tarifária</h4>
                <button type="button" class="close" data-dismiss="modal" onClick="closeModal()">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div id="lista">
                    @foreach (var item in Model)
                    {
                        <div id="@item.Id" style="display:none;">

                            @{ string codigo = "btn" + item.Id;
                                string valor = "Valor" + item.Id;
                            }
                            <div class=" row form-group col-lg-12">
                                <div class="col-lg-5">
                                    <label>Distribuidora:</label>
                                    <input value="@item.Distribuidora" class="form-control" disabled="" />
                                    <label></label>
                                </div>
                                <div class="col-lg-3">
                                    <label>UF:</label>
                                    <input value="@item.Uf" class="form-control" disabled="" />
                                </div>
                                <div class="col-lg-4">
                                    <label>Valor</label>
                                    <input type="text" value="@item.Valor" class="form-control" id="@valor" />

                                </div>
                            </div>

                            <div class="modal-footer">
                                <a href="#" id="@codigo" rel="@item.Id" class="btn btn-primary botao">Salvar</a>
                                <button type="button" class="btn btn-alert" data-dismiss="modal" onClick="closeModal()">Fechar</button>
                            </div>
                        </div>

                    }
                </div>
            </div>

        </div>
    </div>
</div>

<script src="~/Scripts/Administrativa/js/lib/jquery/jquery.min.js"></script>
<script>
    $(".botao").click(function () {
        var codigo = $(this).attr("rel");
        var valor = $("#Valor" + codigo).val();
        var x = "";
        $.ajax({
            type: "POST",
            url: '/Gerenciamento/EditarTaxas',
            data: {
                'Codigo': codigo,
                'Valor': valor
            },
            success: function (data) {

                setTimeout(function () {
                    swal({
                        title: "Sucesso",
                        text: "Usuário alterado",
                        type: "success",
                        confirmButtonText: "OK"
                    },
                        function (isConfirm) {
                            if (isConfirm) {
                                window.location.href = "/Gerenciamento";
                            }
                        });
                }, 500);

                $('#myModalSave').modal('hide');

            },
            error: function (error) {
                swal("Erro", "Não foi possivel alterar", "error");
            }
        });
    });

    $(".addTaxa").click(function () {
        var distribuidora = $("#txtDistribuidora").val();
        var uf = $("#txtUF").val();
        var valor = $("#txtValor").val();
        var x = "";
        $.ajax({
            type: "POST",
            url: '/Gerenciamento/AddTaxa',
            data: {
                'distribuidora': distribuidora,
                'uf': uf,
                'valor': valor
            },
            success: function (data) {
                if (!distribuidora == '' || !uf == '' || !valor == '') {
                    setTimeout(function () {
                        swal({
                            title: "Sucesso",
                            text: "Taxa Adicionada",
                            type: "success",
                            confirmButtonText: "OK"
                        },
                            function (isConfirm) {
                                if (isConfirm) {
                                    window.location.href = "/Gerenciamento";
                                }
                            });
                    }, 500);

                    $('#myModalSave').modal('hide');
                } else {
                    swal("Erro", "Os campos não foram preenchidos corretamente", "error");
                }
            },
            error: function (error) {

                if (distribuidora == '') {
                    swal("Erro", "O campo DISTRIBUIDORA Está vazio", "error");
                } else if (uf == '') {
                    swal("Erro", "O campo UF Está vazio", "error");
                } else if (valor == '') {
                    swal("Erro", "O campo VALOR Está vazio", "error");
                } else {
                    swal("Erro", "Já existe DISTRIBUIDORA com esse nome", "error");
                }
            }
        });
    });

</script>