                            'telefone': telefone,
                            'dataNascimento': dataNascimento
                        },
                        success: function (data) {

                            setTimeout(function () {
                                swal({
                                    title: "Sucesso",
                                    text: "Usuário alterado",
                                    type: "success",
                                    confirmButtonText: "OK"
                                },
