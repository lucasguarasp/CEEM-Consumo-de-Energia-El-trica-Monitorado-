@model ProjetoCEEM.ViewModels.ContatosViewModel
@{
    ViewBag.Title = "Contatos";
    Layout = "~/Views/Shared/_LayoutAdministrativaFull.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Contatos</h3>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="row col-lg-12">
                    <div class="col-lg-4">
                        <label>Email *</label>
                        @Html.EditorFor(modelContato => modelContato.Email, new { htmlAttributes = new { @class = "form-control email", placeholder = "Digite seu email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4">
                        <label>Telefone</label>
                        @Html.EditorFor(modelContato => modelContato.Telefone, new { htmlAttributes = new { @class = "form-control telefone", placeholder = "Digite seu telefone" } })
                        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-4">
                        <label>Celular</label>
                        @Html.EditorFor(modelContato => modelContato.Celular, new { htmlAttributes = new { @class = "form-control celular", placeholder = "Digite seu celular" } })
                        @Html.ValidationMessageFor(model => model.Celular, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary btn-flat m-b-20 m-t-20 pull-right">Atualizar Perfil</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>





