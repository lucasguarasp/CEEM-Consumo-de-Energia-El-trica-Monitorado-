
@{
    ViewBag.Title = "Privacidade";
    Layout = "~/Views/Shared/_LayoutAdministrativaFull.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Privacidade</h3>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form class="form-horizontal form-material">

                <div class="form-group col-lg-12">
                    <div class="row">
                        <div class="col-lg-4">
                            <label>Senha antiga</label>
                            <input type="password" class="form-control" placeholder="Digite sua senha antiga">
                        </div>
                        
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="row">
                       
                        <div class="col-lg-4">
                            <label>Nova senha</label>
                            <input type="password" class="form-control" placeholder="Digite sua nova senha">
                        </div>
                       
                    </div>
                </div>
                <div class="form-group col-lg-12">
                    <div class="row">
                        
                        <div class="col-lg-4">
                            <label>Repita nova senha</label>
                            <input type="password" class="form-control" placeholder="Repita sua nova senha">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-primary btn-flat m-b-20 m-t-20 pull-right">Atualizar Perfil</button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>

