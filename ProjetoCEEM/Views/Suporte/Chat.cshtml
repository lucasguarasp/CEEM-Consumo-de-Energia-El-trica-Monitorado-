@model ProjetoCEEM.Models.QnAQuery
@{

    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutAdministrativaFull.cshtml";

}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Suporte</h3>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <div class="form-horizontal">

                <br />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @using (Html.BeginForm())
                {
                    <div class="form-group">

                        @Html.LabelFor(model => model.Pergunta, htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="col-md-10">

                            @Html.TextBox("SearchString", "", new { style = "width: 800px;"}) <input type="submit" value="Enviar" class="btn btn-primary" style="margin-top:10px"/>

                        </div>

                    </div>
                }

                <div class="form-group">

                    @Html.LabelFor(model => model.Resposta, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">

                        @Html.DisplayFor(model => model.Resposta, new { htmlAttributes = new { @class = "form-control" } })

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>