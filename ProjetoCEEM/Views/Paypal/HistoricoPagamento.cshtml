@model IEnumerable<ProjetoCEEM.Models.Pagamento>
@{
    ViewBag.Title = "HistoricoPagamento";
    Layout = "~/Views/Shared/_LayoutAdministrativaFull.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-primary">Ordem de Serviços</h3>
    </div>

</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">

            <div class="table-responsive">
                <div id="example23_wrapper" class="dataTables_wrapper">

                    <table id="example23" class="table table-hover table-striped table-bordered">
                        <thead>
                            <tr role="row">
                                <th class="sorting" style="width: 60%;">Código do Pagamento</th>
                                <th style="width: 20%;">Data de Pagamento</th>
                                <th class="sorting" style="width: 20%;">Data de Vencimento</th>
                            </tr>
                        </thead>


                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CompraId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataPagamento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DataVencimento)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


